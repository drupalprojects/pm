<?php
/**
 * @file
 * Install, update and uninstall functions for the pmpermission module.
 */

/**
 * Implements hook_uninstall().
 */
function pmpermission_uninstall() {
  module_load_include('inc', 'pm', 'includes/pm.install');
  $module = 'pmpermission';

  // Delete items created by his module.
  pm_uninstall_variables($module);
}
