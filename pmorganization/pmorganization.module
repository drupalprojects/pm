function pmorganization_access($op, $node, $account = NULL) {
  if (empty($account)) {
    global $user;
    $account = $user;
  }

  if ($op == 'create') {
    return user_access('Project Management organization: add');
  }

  if (is_numeric($node)) $node = node_load($node);

  if (!isset($account->pmorganization_nid) && module_exists('pmperson')) {
    _pmperson_user_load($account);
  }

  if ($op == 'delete') {
    if (user_access('Project Management organization: delete all')) {
      return TRUE;
    }
    elseif (user_access('Project Management organization: delete own') && ($account->uid == $node->uid)) {
      return TRUE;
    }
  }

  if ($op == 'update') {
    if (user_access('Project Management organization: edit all')) {
      return TRUE;
    }
    elseif (user_access('Project Management organization: edit own') && ($account->uid == $node->uid)) {
      return TRUE;
    }
    elseif (user_access('Project Management organization: edit belonged') && ($account->pmorganization_nid == $node->nid)) {
      return TRUE;
    }
  }

  if ($op == 'view') {
    if (user_access('Project Management organization: view all')) {
      return TRUE;
    }
    elseif (user_access('Project Management organization: view own') && ($account->uid == $node->uid)) {
      return TRUE;
    }
    elseif (user_access('Project Management organization: view belonged') && ($account->pmorganization_nid == $node->nid)) {
      return TRUE;
    }
  }
  return FALSE;
}

function pmorganization_access_sql($sql, $where = array()) {
  if (user_access('Project Management organization: view all')) {
    $where[] = "'pm_access'='pm_access'";
    return pm_rewrite_sql($sql, $where);
  }

  global $user;

  $cond = '';
  if (user_access('Project Management organization: view own')) {
    $cond .= 'n.uid='. $user->uid;
  }
  if (user_access('Project Management organization: view belonged')) {
    if (!empty($cond)) $cond .= ' OR ';
    $cond .= 'n.nid='. $user->pmorganization_nid;
  }
  if (empty($cond)) $cond = '0=1';
  $where[] = $cond;

  $where[] = "'pm_access'='pm_access'";
  return pm_rewrite_sql($sql, $where);
}

function pmorganization_pm_rewrite_where_sql($query, $primary_table, $account) {
  static $conds = array();

  if (isset($conds[$primary_table][$account->uid])) {
    return $conds[$primary_table][$account->uid];
  }

  if (preg_match("/'pm_access'='pm_access'/", $query)) {
    $cond = '';
  }
  else {
    if (user_access('Project Management organization: view all', $account)) {
      return '';
    }

    $cond = '';
    if (user_access('Project Management organization: view own', $account)) {
      $cond .= "${primary_table}.uid=". $account->uid;
    }
    if (user_access('Project Management organization: view belonged', $account)) {
      if ($cond) {
        $cond .= ' OR ';
      }
      // If function is called without viewing an organization, this variable may not be set.
      // These lines check for that and set the organization node id to zero if not otherwise set.
      if (!isset($account->pmorganization_nid)) {
        $account->pmorganization_nid = 0;
      }
      $cond .= ' sor1.nid='. $account->pmorganization_nid;
    }
    if ($cond) {
      $cond = " WHEN 'pmorganization' THEN (SELECT IF($cond,1,0) FROM {pmorganization} sor1 WHERE sor1.vid=${primary_table}.vid) ";
    }
    else {
      $cond = " WHEN 'pmorganization' THEN 0 ";
    }
  }

  $conds[$primary_table][$account->uid] = $cond;
  return $cond;
}

